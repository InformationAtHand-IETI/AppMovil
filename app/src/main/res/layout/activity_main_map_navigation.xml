<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMapActivity">

    <!-- ðŸ“ Fragmento del mapa -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ“‚ Contenedor dinÃ¡mico para otros fragments -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F5F5F5"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ“± Barra de navegaciÃ³n estilo iOS/moderna -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_nav_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:weightSum="5">

            <!-- 1ï¸âƒ£ Perfil -->
            <LinearLayout
                android:id="@+id/nav_profile_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/icon_profile"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/profile_icon" />


                <TextView
                    android:id="@+id/label_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 2ï¸âƒ£ Chat -->
            <LinearLayout
                android:id="@+id/nav_chat_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/icon_chat"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/chat_icon" />


                <TextView
                    android:id="@+id/label_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 3ï¸âƒ£ Mapa Central (FAB) -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_map"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:contentDescription="Mapa"
                    android:src="@android:drawable/ic_dialog_map"
                    app:backgroundTint="#1A237E"
                    app:tint="#FFFFFF"
                    app:elevation="8dp"
                    app:fabSize="normal"
                    app:borderWidth="0dp"
                    app:maxImageSize="28dp" />
            </FrameLayout>

            <!-- 4ï¸âƒ£ Accidentes (Lista) -->
            <LinearLayout
                android:id="@+id/nav_accidents_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/icon_accidents"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/list_icon" />

                <TextView
                    android:id="@+id/label_accidents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accidentes"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 5ï¸âƒ£ Planes (Precio) -->
            <LinearLayout
                android:id="@+id/nav_plans_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/icon_plans"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/price_icon" />

                <TextView
                    android:id="@+id/label_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Planes"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>