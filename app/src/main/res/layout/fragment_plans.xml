<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header moderno -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Planes y Precios"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elige el plan que mejor protege a los tuyos"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnBasicPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Badge Gratis -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRATIS"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:background="@drawable/badge_background_green"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Básico"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/mes"
                        android:textSize="16sp"
                        android:textColor="#999999"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Características -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Alertas de zonas peligrosas"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Mapas básicos de seguridad"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Reportes ciudadanos simples"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="8dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSelectBasic"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Comenzar Gratis"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:backgroundTint="#E8F5E9"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnPremiumPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1A237E"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Badge Popular -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MÁS POPULAR"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:background="@drawable/badge_background_gold"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Individual"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$15.000"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="#FFD700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/mes"
                        android:textSize="16sp"
                        android:textColor="#B0B0B0"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Características Premium -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Todo del plan básico"
                        android:textSize="14sp"
                        android:textColor="#E0E0E0"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Alertas en tiempo real"
                        android:textSize="14sp"
                        android:textColor="#E0E0E0"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Predicciones de riesgo IA"
                        android:textSize="14sp"
                        android:textColor="#E0E0E0"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Estadísticas personalizadas"
                        android:textSize="14sp"
                        android:textColor="#E0E0E0"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Notificaciones push prioritarias"
                        android:textSize="14sp"
                        android:textColor="#E0E0E0"
                        android:drawablePadding="8dp" />
                </LinearLayout>
}7
                <Button
                    android:id="@+id/btnSelectPremium"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Elegir Premium"
                    android:textColor="#1A237E"
                    android:textStyle="bold"
                    android:backgroundTint="#FFD700"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Plan Premium Familiar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnFamilyPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Badge Familiar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAMILIAR"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#FF6F00"
                    android:background="@drawable/badge_background_orange"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Familiar"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$40.000"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="#FF6F00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/mes"
                        android:textSize="16sp"
                        android:textColor="#999999"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Características Familiar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Todo del plan individual"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Hasta 6 perfiles familiares"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Cobertura extendida"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Alertas geolocalizadas por persona"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Panel de control familiar"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="8dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSelectFamily"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Proteger a mi Familia"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="#FF6F00"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>