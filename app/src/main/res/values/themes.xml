<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal con Material Components -->
    <style name="Theme.InformationAtHand" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorSecondary">#FF4081</item>
        <item name="android:statusBarColor">#303F9F</item>
        <item name="android:navigationBarColor">#3F51B5</item>
        <item name="android:windowBackground">#F5F5F5</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Estilo personalizado para los botones -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#3F51B5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>
